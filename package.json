{
  "name": "boilerplate-api-express-nodejs",
  "version": "1.0.0",
  "description": "Template de Servidor NodeJS utilizando Express, Sequelize, EJS",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiilins/boilerplate-api-express-nodejs"
  },
  "type": "module",
  "author": {
    "name": "Thiago Lins",
    "email": "falecom@thiagolins.dev.br",
    "url": "https://www.thiagolins.dev.br"
  },
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"node --loader ts-node/esm ./src/server.ts\"",
    "build": "rm -rf ./dist/ && tsc",
    "start": "node ./dist/server.js",
    "postinstall": "husky install",
    "lint": "eslint src --max-warnings=0"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
